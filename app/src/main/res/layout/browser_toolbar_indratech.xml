<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:padding="@dimen/_4sdp"
    android:focusableInTouchMode="true"
    app:layout_scrollFlags="scroll|enterAlways"
    android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/indratech_btn_home"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:src="@drawable/ic_home"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="367dp"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/indratech_search_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@android:color/white"
                android:hint="@string/enter_url_indratech"
                android:imeActionId="666"
                android:imeActionLabel="Enter"
                android:imeOptions="actionGo"
                android:gravity="center"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textColorHint="#90000000"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/indratech_search_cancel"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_close"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="@dimen/_4sdp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_search"
                android:visibility="visible"
                app:tint="@color/colorPrimary" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true">
        <ImageView
            android:id="@+id/btn_settings"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:src="@drawable/ic_settings" />

        <ImageView
            android:id="@+id/indratech_btn_info"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:src="@drawable/ic_info"

            />
    </LinearLayout>

    
    
</RelativeLayout>