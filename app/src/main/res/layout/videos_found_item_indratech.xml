<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@drawable/window_bg"
    android:layout_marginBottom="@dimen/_10sdp">

    <TextView
        android:id="@+id/indratech_videoFoundSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="samp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_10sdp"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_2sdp" />

    <TextView
        android:id="@+id/indratech_videoFoundName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="samp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        android:layout_toRightOf="@+id/indratech_videoFoundSize"
        android:gravity="center_vertical"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/indratech_videoFoundPlay"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:tint="@color/colorAccent"
            android:src = "@drawable/ic_play"/>

        <ImageView
            android:id="@+id/indratech_videoFoundDownload"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_10sdp"
            app:tint="@color/colorAccent"
            android:src = "@drawable/ic_file_download"/>

        <ImageView
            android:id="@+id/indratech_videoFoundRename"
            android:layout_width="@dimen/icon_dimen"
            android:layout_height="@dimen/icon_dimen"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_4sdp"
            app:tint="@color/colorAccent"
            android:src = "@drawable/ic_rename"/>

    </LinearLayout>
</LinearLayout>